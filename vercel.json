{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "frontend/build" }
      },
      {
        "src": "./*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "./(.*)", "dest": "./app.js" },
      { "src": "/(.*)", "dest": "/frontend/build/$1" }
    ]
  }